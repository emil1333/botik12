## .editorconfig
## http://editorconfig.org/
## https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
tab_width = 4

[.editorconfig]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 2
tab_width = 4

[*.json]
indent_size = 2

[{src,__tests__}/**.{ts,js}]
charset = utf-8
insert_final_newline = true
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space
